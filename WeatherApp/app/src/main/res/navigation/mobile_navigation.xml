<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_initial_setup">

    <fragment
        android:id="@+id/nav_initial_setup"
        android:name="com.example.weatherapp.ui.setup.InitialSetupFragment"
        android:label="Initial Setup"
        tools:layout="@layout/fragment_initial_setup">
        >
        <action
            android:id="@+id/action_initialSetup_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_initial_setup"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_initialSetup_to_mapFragment"
            app:destination="@id/nav_map" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.weatherapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="latitude"
            app:argType="float"
            android:defaultValue="0.0" />
        <argument
            android:name="longitude"
            app:argType="float"
            android:defaultValue="0.0" />
    </fragment>

    <fragment
        android:id="@+id/nav_favourites"
        android:name="com.example.weatherapp.ui.favourites.FavouritesFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourites">
        <action
            android:id="@+id/action_nav_favourites_to_mapFragment"
            app:destination="@id/nav_map" />
        <action
            android:id="@+id/action_nav_favourites_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_map"
        android:name="com.example.weatherapp.ui.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map_view" />
        />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.weatherapp.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
    <action
        android:id="@+id/action_settingsFragment_to_mapFragment"
        app:destination="@id/nav_map" />
    </fragment>
        />

    <fragment
        android:id="@+id/nav_alerts"
        android:name="com.example.weatherapp.ui.alerts.AlertsFragment"
        android:label="Alerts"
        tools:layout="@layout/fragment_alerts" />
        />

</navigation>