<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/my_font</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/sun_yellow_primary</item>
        <item name="colorPrimaryVariant">@color/sunset_orange_secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/sunset_orange_secondary</item>
        <item name="colorSecondaryVariant">@color/sky_blue_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background & surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/cardBackground</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Optional elevation overlays and shadows -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- No action bar theme -->
    <style name="Theme.WeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App bar overlay style -->
    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup overlay style -->
    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>