<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Location -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbGps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS" />

            <RadioButton
                android:id="@+id/rbMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map" />
        </RadioGroup>

        <!-- Language -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English" />

            <RadioButton
                android:id="@+id/rbArabic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arabic" />
        </RadioGroup>

        <!-- Temperature -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbCelsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Celsius" />

            <RadioButton
                android:id="@+id/rbFahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fahrenheit" />

            <RadioButton
                android:id="@+id/rbKelvin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelvin" />
        </RadioGroup>

        <!-- Wind Speed -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wind Speed"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgWindSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbMeterSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meter/Sec" />

            <RadioButton
                android:id="@+id/rbMilesHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miles/Hour" />
        </RadioGroup>

        <!-- Notifications -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable" />

            <RadioButton
                android:id="@+id/rbDisable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disable" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>